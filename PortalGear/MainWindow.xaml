<Window x:Class="PortalGear.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PortalGear"
        mc:Ignorable="d"
        Title="Portal Gear Alpha Version" Height="350" Width="525" Closing="MainWindow_OnClosing">
    <Grid ShowGridLines="False">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="1" Text="Saved Position:" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="1" Text="Current Position:" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
<TextBlock Grid.Row="0" Grid.Column="1" Name="camTextBlock" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="2" Name="posTextBlock" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <TextBlock Grid.Row="0" Grid.Column="2" Name="savedPosTextBlock" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <Button Click="AttachBtn_OnClick" Grid.Row="2" Grid.Column="1" Width="120px" Margin="20px" Name="attachBtn">Attach</Button>
        <Button Click="saveBtn_OnClick" Width="120px" Margin="20px" Name="saveBtn">Save Position</Button>
        <Button Grid.Row="1"  Click="loadBtn_OnClick" Width="120px" Margin="20px" Name="loadBtn">Load Position</Button>
    </Grid>
        
</Window>
